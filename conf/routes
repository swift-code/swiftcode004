# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
POST    /signup                     controllers.Application.signup
POST    /login                      controllers.Application.login
GET     /profile/:id                controllers.HomeController.getProfile(id: Long)
POST    /request/send/:sender/:senderID/:receiverId         controllers.ConnectionController.sendConnectionRequest(senderId Long,receiverId Long)

POST    /request/accept/:id                                 controllers.ConnectionsController.acceptConnectionRequest(senderId Long,receiverId Long)


PUT     /profile/:id                                        controllers.HomeController.updateProfile(id: Long)

